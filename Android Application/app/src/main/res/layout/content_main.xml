<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="13dp"
            tools:layout_editor_absoluteX="61dp">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="Open Air Quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:textAlignment="center" android:textColor="@color/design_default_color_primary_dark"
                        android:textSize="30sp" android:textStyle="bold"/>
                <TextView
                        android:text="Select a country from the dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView11" android:textSize="18sp"
                        android:textColor="@android:color/holo_red_dark" android:textAlignment="center"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="57dp" android:id="@+id/spinner"/>
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Locations"
                                android:layout_width="139dp"
                                android:layout_height="33dp" android:id="@+id/col1"
                                android:lineSpacingExtra="14sp" android:textAlignment="center"
                                android:textStyle="bold" android:textSize="18sp"
                                android:textColor="@color/colorPrimary"/>
                        <TextView
                                android:text="Measurements"
                                android:layout_width="138dp"
                                android:layout_height="match_parent" android:id="@+id/col2"
                                android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"
                                android:textColor="@color/colorPrimary"/>
                        <TextView
                                android:text="Area"
                                android:layout_width="131dp"
                                android:layout_height="match_parent" android:id="@+id/textView20"
                                android:lineSpacingExtra="18sp" android:textAlignment="center"
                                android:textStyle="bold" android:textSize="18sp"
                                android:textColor="@color/colorPrimary"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="43dp" android:id="@+id/col3" android:textAlignment="center"
                                android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/col4"
                                android:textAlignment="center" android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/textView21"
                                android:textAlignment="center" android:textSize="16sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="33dp" android:id="@+id/col5" android:textAlignment="center"
                                android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/col6"
                                android:textAlignment="center" android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/textView22"
                                android:textAlignment="center"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/col7"
                                android:textAlignment="center" android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp" android:id="@+id/col8" android:textAlignment="center"
                                android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/textView24"
                                android:textAlignment="center" android:textSize="16sp"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="38dp">
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp" android:id="@+id/col9" android:textAlignment="center"
                                android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/col10"
                                android:textAlignment="center" android:textSize="16sp"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/textView25"
                                android:textAlignment="center" android:textSize="16sp"/>
                    </TableRow>
                </TableLayout>
                <Button
                        android:text="Exit"
                        android:layout_width="match_parent"
                        android:layout_height="44dp" android:id="@+id/exit_button"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="?attr/colorButtonNormal" android:textSize="20sp"
                        android:textStyle="bold"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="313dp" tools:src="@tools:sample/backgrounds/scenic"
                        android:id="@+id/imageView"/>
                <TextView
                        android:text="Thank you for choosing this air quality app!"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" android:id="@+id/textView2" android:textSize="18sp"
                        android:textAlignment="center" android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>